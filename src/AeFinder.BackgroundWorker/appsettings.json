{
  "ConnectionStrings": {
    "Default": "mongodb://localhost:27017/AeFinder"
  },
  "Redis": {
    "Configuration": "127.0.0.1"
  },
  "Orleans": {
    "ClusterId": "dev",
    "ServiceId": "OrleansBasics",
    "MongoDBClient": "mongodb://localhost:27017/?maxPoolSize=555",
    "DataBase": "AeFinderOrleansDB",
    "ClusterDbConnection": "127.0.0.1:6379",
    "ClusterDbNumber": 0,
    "GrainResponseTimeOut": 30,
    "GrainMaxMessageBodySize": 209715200
  },
  "RabbitMQ": {
    "Connections": {
      "Default": {
        "HostName": "localhost",
        "Port": "5672",
        "UserName": "guest",
        "Password": "guest"
      }
    },
    "EventBus": {
      "ClientName": "AeFinder-BackgroudWorker",
      "ExchangeName": "AeFinder-BackGround",
      "PrefetchCount": 100
    }
  },
  "Kubernetes": {
    "AppPodReplicas": 2,
    "HostName": "k8s.hoopox.com",
    "OriginName": "http://k8s.hoopox.com:32439"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Default": "Warning",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "Path": "Logs/log-.log",
          "retainedFileCountLimit": 15,
          "rollOnFileSizeLimit": true,
          "rollingInterval" : "Day"
        }
      }
    ]
  }
}